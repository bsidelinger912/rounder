{
    "compilerOptions": {
      "outDir": "dist/api",
      "rootDir": "src/api",
      "module": "CommonJS",
      "target": "ES6",
      "sourceMap": true,
      "allowJs": true,
      "moduleResolution": "node",
      "lib": [
        "es5",
        "es6",
        "dom",
        "es2015.core",
        "es2015.collection",
        "es2015.generator",
        "es2015.iterable",
        "es2015.promise",
        "es2015.proxy",
        "es2015.reflect",
        "es2015.symbol",
        "es2015.symbol.wellknown",
        "esnext.asynciterable"
      ],
      "forceConsistentCasingInFileNames": true,
      "noImplicitReturns": true,
      "noImplicitThis": true,
      "noImplicitAny": true,
      "strictNullChecks": true,
      "suppressImplicitAnyIndexErrors": true,
      "noUnusedLocals": true
    },
    "include": [
      "src/api/**/*"
    ],
    "exclude": [
      "node_modules",
      "dist"
    ]
  }